<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/main_result_text"
        android:layout_width="364dp"
        android:layout_height="221dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:singleLine="false"
        android:textAlignment="inherit"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/main_speech_speed_result_text"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/main_result_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="392dp" />

    <TextView
        android:id="@+id/main_speech_current_result_text"
        android:layout_width="360dp"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/main_result_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="141dp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="467dp" />

    <TextView
        android:id="@+id/main_grammar_check_result"
        android:layout_width="362dp"
        android:layout_height="134dp"
        android:layout_alignStart="@+id/main_result_text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="264dp" />

    <Button
        android:id="@+id/main_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_speech_speed_result_text"
        android:layout_alignTop="@+id/main_start_stop"
        android:text="Start"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="538dp" />

    <Button
        android:id="@+id/main_start_stop"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="20dp"
        android:text="STOP"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="538dp" />

    <Button
        android:id="@+id/main_speak_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_start_btn"
        android:layout_alignEnd="@+id/main_result_text"
        android:text="Speak" />

</RelativeLayout>